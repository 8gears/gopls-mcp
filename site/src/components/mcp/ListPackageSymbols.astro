---
import '../../styles/mcp-demo.css';
---

<div class="comparison-container">
  <div class="comparison-grid">
    {/* LEFT: MANUAL */}
    <div class="workflow-pane manual-theme">
      <div class="pane-header">
        <div class="badge error">Without MCP</div>
        <span class="pane-title">File Browsing</span>
      </div>
      <div class="pane-content">
        <div class="step-item">
          <div class="step-marker">1</div>
          <div class="step-text">Open file explorer & guess</div>
        </div>
        <div class="terminal-mock">
            <div class="term-line"><span class="prompt">$</span> ls pkg/auth/*.go</div>
            <div class="term-output">
                jwt.go<br/>
                login.go<br/>
                session.go
            </div>
        </div>
        <div class="step-item">
            <div class="step-marker">2</div>
            <div class="step-text">Open files to find exports</div>
        </div>
        <div class="friction-note"><span class="icon">üìÇ</span> High Cognitive Load</div>
      </div>
    </div>

    {/* VS */}
    <div class="vs-divider">
        <div class="vs-line"></div><div class="vs-text">VS</div><div class="vs-line"></div>
    </div>

    {/* RIGHT: MCP */}
    <div class="workflow-pane mcp-theme">
      <div class="pane-header">
        <div class="badge success">With gopls-mcp</div>
        <span class="pane-title">Symbol Inventory</span>
      </div>
      <div class="pane-content">
        <div class="code-context">
           <div class="context-label">Query</div>
           <pre class="code-snippet">list_symbols("./pkg/auth")</pre>
        </div>
        <div class="connection-visual">
            <div class="arrow-down"></div>
            <div class="mcp-pill">list package symbols</div>
        </div>
        <div class="result-card">
            <div class="result-header">
                <span class="res-title">Package Public API</span>
            </div>
            <div class="result-body">
                <div class="ref-list">
                    <div class="ref-item"><span class="fn">func</span> Login(ctx, creds)</div>
                    <div class="ref-item"><span class="fn">func</span> ValidateToken(t)</div>
                    <div class="ref-item"><span class="typ">type</span> Credentials struct</div>
                    <div class="ref-item"><span class="var">var</span> ErrUnauthorized</div>
                </div>
            </div>
        </div>
        <div class="efficiency-note"><span class="icon">üó∫Ô∏è</span> Instant Architecture Map</div>
      </div>
    </div>
  </div>
</div>